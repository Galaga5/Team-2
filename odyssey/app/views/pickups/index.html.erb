</head>

  <body>

      <%= render 'layouts/navbar' %>
      <div class='container white-container'>
                <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <h2>Pending Pickups</h2>
                <p>Select a pickup from the list below to edit. To add a new pickup click 'Add New Pickup'</p>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-5 col-xs-offset-1">
                <a href="/pickups/new"><btn class="btn btn-success"><span class="glyphicon glyphicon-plus"></span>&nbsp;&nbsp;Add New Pickup</btn></a>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <table class="table table-hover table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>Last Name</th>
                            <th>Town</th>
                            <th>Item Quantity</th>
                            <th>Item Description</th>
                        </tr>
                    </thead>
                    
                    <tbody>
                      <% @pickups.each do |pickup| %>
                        <% if(pickup.day_id == nil) %>
                          <!--<tr onclick="window.document.location='/home/home3';"  get working --> 
                            
                              <td><%= pickup.donor_name %></td>
                              <td><%= pickup.donor_city %></td>
                              <td><%= pickup.number_of_items %></td>
                              <td><%= pickup.item_description %></td>
                          </tr>
                        <% end %>
                      <% end %>
                    </tbody>
                </table>
            </div>
        </div>
        

    </div>

  </body>

</html>