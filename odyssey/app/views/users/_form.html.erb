
<div class="row">
      <%= form_for (@user), url: {action: "create"}, html: {class: "nifty form"} do |f| %>
      
        <%= f.label :user_name %>
        <%= f.text_field :user_name, class: 'form-control' %>
        </br>
      
        <%= f.label :user_email %>
        <%= f.email_field :user_email, class: 'form-control' %>
        </br>
        
        <%= f.label :permission_level %>
        <%= f.select :permission_level, [['Entry','entry'],['Standard','standard'],['Admin','admin']], :include_blank => true %>
        </br>
        </br>
      
        <%= f.label :user_password %>
        <%= f.password_field :user_password, class: 'form-control' %>
      
        <%= f.label :user_password_confirmation %>
        <%= f.password_field :user_password_confirmation, class: 'form-control' %>
        </br>
      
        <%= f.submit "Create Account", class: "btn btn-primary" %>
        <%= link_to "Cancel", :back, class: "btn btn-primary" %>
      <% end %>
</div>