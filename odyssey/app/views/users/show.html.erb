<% provide(:title, @user.user_name) %>
<body>
<%= render 'layouts/navbar' %>
<!-- Begin main content -->
<div class="container">
    <div class="row">
        <div class='col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2 well'>
        <h4 class="text-center">Manage User</h4>
            <%= form_for (@user), url: {action: "update"}, html: {class: "nifty form"} do |f| %>
                <br>
                <b>User Name: </b>
                <%= @user.user_name %>
                </br>
                
                <br>
                <b>Email: </b>
                <%= @user.user_email %>
                </br>
                 
                <br> 
                <b>Change User Level: </b>
                <%= f.select :permission_level, [['Entry','entry'],['Standard','standard'],['Admin','admin']] %>
                </br>
                <br>
                <%= f.label :user_password, "New Password:     "%>
                <%= f.password_field :user_password, class: 'form-control' %>
              
                <%= f.label :user_password_confirmation, "Confirm:     " %>
                <%= f.password_field :user_password_confirmation, class: 'form-control' %>
                </br>
              
                <%= f.submit "Update Account", class: "btn btn-primary" %>
                <%= link_to "Cancel", :back, class: "btn btn-primary" %>
                <%= link_to "Remove User", @user, method: :delete, data: { confirm: "You sure breh?" } , class: "btn btn-primary"%>    
            <% end %>
            </div>
    </div>
</div>
</h1>