<h1>PickUp Pages#edit</h1>


<%= form_for(@pickup) do |f| %>
  
  <%= f.label :donor_name, "Name" %>
  <%= f.text_field :donor_name, class: 'form_control' %>
  <br>
  <br>
  
  <%= f.label :donor_address_line1, "Address" %>
  <%= f.text_field :donor_address_line1, class: 'form_control' %>
  <br>
  
  <%= f.label :donor_address_line2, "- - - - - -" %>
  <%= f.text_field :donor_address_line2, class: 'form_control' %>
  <br>
  <br>
  
  <%= f.label :donor_city, "City" %>
  <%= f.text_field :donor_city, class: 'form_control'  %>
  <br>
  <br>
  
  <%= f.label :donor_zip, "Zip Code" %>
  <%= f.text_field :donor_zip, class: 'form_control' %>
  <br>
  <br>
  
  <%= f.label :donor_dwelling_type, "Type of Residence" %>
  <%= f.text_field :donor_dwelling_type, class: 'form_control' %>
  <br>
  <br>
  
  <%= f.label :donor_location_instructions, "Location Instructions"  %>
  <%= f.text_field :donor_location_instructions, class: 'form_control' %>
  <br>
  <br>
  
  <%= f.label :donor_phone, "Phone Number" %>
  <%= f.text_field :donor_phone, class: 'form_control' %>
  <br>
  <br>
  
  <%= f.label :donor_email, "E-Mail"  %>
  <%= f.email_field :donor_email, class: 'form_control' %>
  <br>
  <br>
  
  <%= f.label :number_of_items, "Number of Items" %>
  <%= f.number_field :number_of_items, class: 'form_control' %>
